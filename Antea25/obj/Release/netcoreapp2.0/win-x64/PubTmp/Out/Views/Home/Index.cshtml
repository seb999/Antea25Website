@{
    ViewData["Title"] = "Home Page";
}

<style>
    img {
        max-width: 100%;
        height: auto;
    }
</style>

<div class="page-header">
    <h1>Antea25 IOT system <small>simless GPS trackers</small></h1>
</div>

<div class="jumbotron" style="height:800px;margin:-15px !important;  background-image:url('images/splash.jpg')">
    <div class="container">

        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="4000">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
            </ol>
            <div class="carousel-inner" role="listbox" style="padding-bottom:0px">
                <div class="item active" style="height:100px;">
                    <div class="carousel-caption" role="option">
                        <h2 style="color:#2c3e50">
                            Tired to get your bike stolen ?
                        </h2>
                    </div>
                </div>
                <div class="item" style="height:100px;">
                    <div class="carousel-caption" role="option">
                        <h2 style="color:#2c3e50">
                            Always keep an eye on it...
                        </h2>
                    </div>
                </div>
            </div>
            <a class="left" href="#myCarousel" role="button" data-slide="prev" style="background-color:transparent;float:left">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right" href="#myCarousel" role="button" data-slide="next" style="background-color:transparent;float:right">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="container text-center">
            <h2 style="color:white; z-index:110; margin-top:70px;font-weight:800">IOT simless solution</h2>
            <br><br><br><br>

            <button style="margin-right:5px;margin-left:5px" type="button" class="btn btn-labeled btn-primary btn-sm" onclick="location.href='@Url.Action("Login", "Account")'">
                <span class="btn-label btn-lg">LOGIN</span>
            </button>

            <button style="margin-right:5px;margin-left:5px" type="button" class="btn btn-labeled btn-info btn-sm" onclick="location.href='@Url.Action("Contact", "Home")'">
                <span class="btn-label btn-lg">CONTACT</span>
            </button>

            <div style="height:150px;margin-top:100px; margin-left:50px !important">
                <video controls="controls" autoplay="autoplay" loop="loop" style="border:solid;border-color:white;border-width:1px;width:inherit; height:inherit;float:left;margin:1px">
                    <source src="~/images/Antea25_clip.mp4" type="video/mp4" />
                </video>
            </div>
        </div>
    </div>
</div>

<div class="jumbotron" style="margin:-15px !important;">
    <div class="container">
        <h2>Track it with Antea25 devices</h2>
        <div class="text-center"><img src="~/images/loc.jpg" width="1500" style="margin-bottom:60px;box-shadow: 10px 10px 5px #808080" /></div>
        <div>
            <button style="margin-right:5px;margin-left:5px" type="button" class="btn btn-labeled btn-primary btn-sm" onclick="location.href='@Url.Action("About", "Home")'">
                <span class="btn-label btn-lg">Learn more</span>
            </button>

        </div>
    </div>
</div>

<div class="jumbotron" style="margin:-15px !important;background-image:url('images/gamlastan.jpg');height:600px">
    <div class="container">
        <h2 style="color:whitesmoke">GSM and Simless devices</h2>
        <img src="~/images/prototype.jpg" width="300" style="margin-bottom:20px;" />
        <div>
            <button style="margin-right:5px;margin-left:5px" type="button" class="btn btn-labeled btn-primary btn-sm" onclick="location.href='@Url.Action("About", "Home")'">
                <span class="btn-label btn-lg">Learn more</span>
            </button>

        </div>
       
    </div>
</div>

